#!/usr/bin/python3

import pyautogui
import time
import argparse
import sys

__version__ = "1.0"

if __name__ == "__main__":
    parser = argparse.ArgumentParser()
    parser.add_argument("--version", "-V", action="store_true", help="view version")
    args = parser.parse_args()

    if args.version:
        print(__version__)
        sys.exit(0)

    time.sleep(0.1)
    pyautogui.typewrite("Touhou", interval=0)
